<script>
   $(document).ready(function() {
    // Function to calculate and update price for a specific row
    function calculateUnitPrice(row) {
        let strikePrice = parseFloat(row.find(".strikePrice-input").val()) || 0;
        let discount = parseFloat(row.find(".discount-input").val()) || 0;
        let discountType = row.find(".discountType-input").val();
        let price;

        if (discountType === "flat") {
            price = strikePrice - discount;
        } else if (discountType === "percentage") {
            price = strikePrice - (strikePrice * discount / 100);
        } else {
            price = strikePrice; // Default to strikePrice if discountType is not recognized
        }

        row.find(".price-input").val(price.toFixed(2)); // Update the price input with formatted price
    }

    // Attach event handlers to dynamically update prices for both static and dynamic rows
    $(document).on("focusout change", ".calunitprice", function() {
        let row = $(this).closest('.size-quantity-row'); // Find the closest row
        calculateUnitPrice(row);
    });

    // Initial calculation for all rows if fields are already filled
    $(".size-quantity-row").each(function() {
        calculateUnitPrice($(this));
    });

    // Add new row functionality
    $('#addSizeQuantity').click(function() {
        var index = $('#sizeQuantityContainer .size-quantity-row').length; // Get the next index
        var row = `
            <div class="size-quantity-row">
                <div class="row">
                    <!-- Size -->
                    <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label for="size_${index}" class="col-form-label">Size</label>
                            <input class="form-control require size-input" type="text" placeholder="Size" name="sizes[${index}]" id="size_${index}" value="">
                        </div>
                    </div>
                    <!-- Quantity -->
                    <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label for="quantity_${index}" class="col-form-label">Quantity</label>
                            <input class="form-control require quantity-input" type="number" placeholder="Quantity" name="quantities[${index}]" id="quantity_${index}" value="">
                        </div>
                    </div>
                    <!-- Strike Price -->
                    <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label for="strikePrice_${index}" class="col-form-label">Strike Price</label>
                            <input class="form-control require strikePrice-input calunitprice" type="number" placeholder="Strike Price" name="strikePrices[${index}]" id="strikePrice_${index}" value="">
                        </div>
                    </div>
                    <!-- Discount Type -->
                    <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label for="discountType_${index}" class="col-form-label">Discount Type</label>
                            <select class="form-control require discountType-input calunitprice" name="discountTypes[${index}]" id="discountType_${index}">
                                <option value="flat">Flat</option>
                                <option value="percentage">Percentage</option>
                            </select>
                        </div>
                    </div>
                    <!-- Discount -->
                    <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label for="discount_${index}" class="col-form-label">Discount</label>
                            <input class="form-control require discount-input calunitprice" type="number" placeholder="Discount" name="discounts[${index}]" id="discount_${index}" value="">
                        </div>
                    </div>
                    <!-- Price -->
                    <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label for="price_${index}" class="col-form-label">Price</label>
                            <input class="form-control require price-input" type="number" placeholder="Price" name="prices[${index}]" id="price_${index}" value="" readonly>
                        </div>
                    </div>
                    <!-- Remove Button -->
                    <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-12">
                        <div class="form-group">
                            <button type="button" class="btn btn-danger btn-sm remove-size-quantity">Remove</button>
                        </div>
                    </div>
                </div>
            </div>
        `;
        $('#sizeQuantityContainer').append(row);
    });

    // Remove size-quantity rows dynamically
    $(document).on('click', '.remove-size-quantity', function() {
        $(this).closest('.size-quantity-row').remove();
    });
});
</script>
