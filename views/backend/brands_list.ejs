<%- include('../partials/header'); %>
    <!-- Container Start -->
    <div class="page-wrapper">
        <div class="main-content">
            <!-- Page Title Start -->
            <div class="row">
                <div class="col xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="page-title-wrapper">
                        <div class="page-title-box">
                            <h4 class="page-title"><%=viewTitle%></h4>
                        </div>
                        <div class="breadcrumb-list">
                            <ul>
                                <li class="breadcrumb-link">
                                    <a href="index.html"><i class="fas fa-home mr-2"></i>Dashboard</a>
                                </li>
                                <li class="breadcrumb-link active"><%=viewTitle%></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Products view Start -->
            <div class="row">
                <!-- Styled Table Card-->
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="card table-card">
                        <div class="card-header ttl-with-btn pb-0">
                            <h4><%=pageTitle%></h4>
                            <div class="card-header-btn">
                                <a class="pc-btn resetModalForm" data-toggle="modal" data-target="#createBrandModal" data-whatever="@mdo" id="addNewBrandBtn">Add New Brand</a>
                            </div>
                        </div>
                        <div class="card-body">
                           <table class="table table-striped table-bordered dt-responsive nowrap display dataTableAjax" style="width:100%" data-action-url="brands_list" data-target-section="tbody" data-column-class="[{className:'sr'},{className:'thumb'},{className:'brand_name'},{className: 'status'},{className: 'action'}]"  data-refresh-dataTablePosition='0' data-filter='filter' data-sort="[{'targets': [],'orderable': false},{'targets': [],'visible': false}]">
                                <thead>
                                    <tr>
                                        <th class="sr">#</th>
                                        <th class="thumb">Thumb</th>
                                        <th class="brand_name">Brand Name</th>
                                        <th class="status">Status</th>
                                        <th class="action">Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

    <!-- Model 6-7-8 -->
	<div class="modal fade" id="createBrandModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel02" data-title="Add New Brand">Add New Brand</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form action="create_brand" method="post" autocomplete="off" data-reset="1">
            <div class="modal-body">
                <input type="hidden" name="id" id="brand_id" value="0">
                <div class="form-group">
                  <label class="col-form-label">Brand Name:</label>
                  <input type="text" class="form-control require" name="brand_name" id="brand_name">
                </div>
                <div class="form-group">
                    <label class="col-form-label">Brand Image: (Recommended Size 85x85)</label>
                    <input type="file" class="form-control d-none require" name="brands_image" id="brand_image" data-error="Please choose an image to upload."> 
                    <label for="brand_image" class="ecom-file-upload">
                        Browse Image
                    </label>
                  </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" data-action="submitMe" class="btn btn-primary">Submit</button>
            </div>
        </form>
          </div>
        </div>
      </div>
<%- include('../partials/footer'); %>