<%- include('../partials/header'); %>
<!-- Container Start -->
<div class="page-wrapper">
    <div class="main-content">
        <!-- Page Title Start -->
        <div class="row">
            <div class="col xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-title-wrapper">
                    <div class="page-title-box">
                        <h4 class="page-title"><%=viewTitle%></h4>
                    </div>
                    <div class="breadcrumb-list">
                        <ul>
                            <li class="breadcrumb-link">
                                <a href="index.html"><i class="fas fa-home mr-2"></i>Dashboard</a>
                            </li>
                            <li class="breadcrumb-link active"><%=viewTitle%></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Products view Start -->
        <div class="row">   
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                
            </div>
        </div>
        <div class="row">
        <div class="col-xl-12">
          <form class="card"  action="settings/updateProfile" method="post" autocomplete="off" data-redirect="admin/profile">
            <div class="card-header">
              <h4 class="card-title mb-0">Edit Profile</h4>
              <div class="card-options"><a class="card-options-collapse" href="javascript:;" data-bs-toggle="card-collapse" data-bs-original-title="" title=""><i class="fe fe-chevron-up"></i></a><a class="card-options-remove" href="javascript:;" data-bs-toggle="card-remove" data-bs-original-title="" title=""><i class="fe fe-x"></i></a></div>
            </div>
            <div class="card-body">
                <% if(userProfile && userProfile.address == null){ %>
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> <a href="#" class="alert-link">Please complete your profile information.</a>
                    </div> 
               <% } %>
                <div class="profile-title">
                  <div class="media pc-profile2-img">                        
                      <img alt="" src="<%= userProfile ? userProfile.profile_image : '' %>">
                    <div class="media-body">
                      <h5 class="mb-1"><%= userProfile ? userProfile.fullname : '' %></h5>
                      <!--p>DESIGNER</p-->
                    </div>
                  </div>
              </div>
              <div class="row">
                <div class="col-sm-4 col-md-4">
                  <div class="mb-6">
                    <label class="form-label">Username</label>
                    <input class="form-control require" type="text" name="uname" placeholder="Username" data-bs-original-title="" title="" value="<%= userProfile ? userProfile.fullname : '' %>">
                  </div>
                </div>
                <div class="col-sm-4 col-md-4">
                  <div class="mb-6">
                    <label class="form-label">Email address</label>
                    <input class="form-control require readonly" type="email" name="uemail" placeholder="Email" data-bs-original-title="" title="" value="<%= userProfile ? userProfile.email : '' %>">
                  </div>
                </div>
                <div class="col-sm-4 col-md-4">
                  <div class="mb-3">
                    <label class="form-label">Mobile</label>
                    <input class="form-control require" type="text" name="umobile" placeholder="Mobile" data-bs-original-title="" title="" value="<%= userProfile ? userProfile.mobile : '' %>">
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="mb-3">
                    <label class="form-label">Address</label>
                    <input class="form-control require" type="text" name="address" placeholder="Home Address" data-bs-original-title="" title="" value="<%= userProfile ? userProfile.address : '' %>">
                  </div>
                </div>
                <div class="col-sm-6 col-md-4">
                  <div class="mb-3">
                    <label class="form-label">City</label>
                    <input class="form-control require" type="text" name="city" placeholder="City" data-bs-original-title="" title="" value="<%= userProfile ? userProfile.city : '' %>">
                  </div>
                </div>
                <div class="col-sm-6 col-md-4">
                  <div class="mb-3">
                    <label class="form-label">Postal Code</label>
                    <input class="form-control require" type="number" name="postal_code" placeholder="ZIP Code" data-bs-original-title="" title="" value="<%= userProfile ? userProfile.postal_code : '' %>">
                  </div>
                </div>
                <div class="col-sm-6 col-md-4">
                  <div class="mb-3">
                    <label class="form-label">Country</label>
                    <input class="form-control require" type="text" name="country" placeholder="Country" data-bs-original-title="" title="" value="<%= userProfile ? userProfile.country : '' %>">
                  </div>
                </div>
                <div class="col-sm-6 col-md-6">
                  <div class="mb-3">
                    <label class="form-label">GST No</label>
                    <input class="form-control" type="text" name="gst_no" placeholder="GST Number" data-bs-original-title="" title="" value="<%= userProfile ? userProfile.gst_no : '' %>">
                  </div>
                </div>
                <div class="col-sm-6 col-md-6">
                  <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input class="form-control" type="text" name="pwd" placeholder="Password" data-bs-original-title="" title="">
                  </div>
                </div>
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                  <div class="product-upload-wrap">
                      <ul class="product-upload-list">
                           <li>
                              <div>
                                  <input class="form-control d-none" type="file" placeholder="Upload Image" name="users_image" id="users_image" onchange="preview(event)">
                                  <label class="dragdrop_box" for="users_image">                                                 
                                      <span class="dragdrop_icon">
                                          <img src="/images/drag.svg" alt="icon" class="img-fluid">
                                      </span>
                                      <div class="dragdrop_info">
                                          <p><span>Upload</span> Your Profile Image</p>
                                          <span class="dragdrop_sprt">Supports: JPG, PNG </span>
                                          <p><span class="dragdrop_sprt numberOfFiles"></span></p>
                                      </div>                                                
                                  </label>
                              </div>
                           </li>
                           <li class="imgArea" style="display:none;">
                              <div class="product-upload-image text-center">
                                <img src="" id="previewImg" alt="image" class="img-fluid">
                              </div>
                          </li>
                      </ul>  
                  </div>
              </div>
              </div>
              <input type="hidden" name="user_id" value="<%= userProfile ? userProfile._id : '' %>">
              <button class="btn btn-primary squer-btn" type="submit" data-action="submitMe" data-bs-original-title="" title="">Update Profile</button>
            </div>
          </form>
        </div>
    </div>
    <%- include('../partials/footer'); %>